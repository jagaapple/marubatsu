{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "dom",
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./.dist",
    "paths": {
      "@checkers/*": ["./src/checkers/*"],
      "@rules/*": ["./src/rules/*"]
    },
    "rootDir": "./src",
    "removeComments": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2015"
  },
  "include": [
    "./src/**/*",
  ],
}
